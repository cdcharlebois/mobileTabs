<?xml version="1.0" encoding="utf-8" ?>
<widget id="MobileTabs.widget.MobileTabs" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>MobileTabs</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="breakpoint" type="integer" required="true" defaultValue="640">
            <caption>breakpoint</caption>
            <category>General</category>
            <description>Screen Width (in pixels) to split between the Large Number of items and the Small Number</description>
        </property>
        <property key="largeNumber" type="integer" required="true" defaultValue="5">
            <caption>Large Number</caption>
            <category>General</category>
            <description>Number of tabs to show above the breakpoint</description>
        </property>
        <property key="smallNumber" type="integer" required="true" defaultValue="3">
            <caption>Small Number</caption>
            <category>General</category>
            <description>Number of tabs to show below the breakpoint</description>
        </property>
    </properties>
</widget>
